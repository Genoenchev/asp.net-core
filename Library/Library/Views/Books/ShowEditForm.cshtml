@model IEnumerable<Library.Models.Book>

@{
    ViewData["Title"] = "ShowEditForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Промени Книга</h1>

<
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre.GenreId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.BookId">Промени</a> |
 
            </td>
        </tr>
}
    </tbody>
</table>
