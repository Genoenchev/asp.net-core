@model IEnumerable<Library.Models.Author>

@{
    ViewData["Title"] = "Index";
}
<h1>Всички Автори</h1>


<div class="row">
    <div class="col-md-4">
        <form asp-action="ShowSearchResults">

            <div class="form-group">
                <label for="SearchPhrase" class="control-label"></label>
                <input name="SearchPhrase" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />

            </div>
        </form>
    </div>
</div>


<div style="margin-left: 5%; margin-top:3%;">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4" style="margin-top:1%;">
                <div class="card" style="width: 18rem;">
                    <img class="card-img-top" src="~/images/icon.png" alt="">
                    <div class="card-body">
                        <h5 color:black class="card-title">Name: @Html.DisplayFor(modelItem => item.AuthorFullName)</h5>
                        @if (ViewBag.Temporary == true)
                        {
                            <p color:black class="card-text">Death date <b>@item.DeathDate</b>(age: @item.Age)</p>
                        }
                        else
                        {
                            <p color:black class="card-text">Age:  @Html.DisplayFor(modelItem => item.Age)</p>
                        }
                        <a asp-action="Details" asp-route-id="@item.AuthorId" class="btn btn-primary">Details</a>
                    </div>
                </div>
            </div>
        }
    </div>

</div>