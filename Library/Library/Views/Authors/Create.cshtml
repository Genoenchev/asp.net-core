@model Library.Models.Author

@{
    ViewData["Title"] = "Create";
}

<h1>Добави Автор</h1>

<body>
    <hr />
    <div color:white class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div  class="form-group">
                    <label color:white asp-for="FirstName" class="control-label"></label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div  class="form-group">
                    <label color:white asp-for="LastName" class="control-label"></label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                @*<div class="form-group">
                        <label asp-for="Age" class="control-label"></label>
                        <input asp-for="Age" class="form-control" />
                        <span asp-validation-for="Age" class="text-danger"></span>
                    </div>*@

                <div  class="form-group">
                    <label asp-for="BirthPlace" class="control-label"></label>
                    <input asp-for="BirthPlace" class="form-control" />

                </div>
                <div  class="form-group">
                    <label asp-for="BirthDate" class="control-label"></label>
                    <input asp-for="BirthDate" class="form-control" />
                    <span asp-validation-for="BirthDate" class="text-danger"></span>
                </div>
                <div  class="form-group">
                    <label asp-for="DeathDate" class="control-label"></label>
                    <input asp-for="DeathDate" class="form-control" />
                </div>
                <div  class="form-group">
                    <label color:white asp-for="About" class="control-label"></label>
                    <input asp-for="About" class="form-control" />
                </div>
                <div  class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="isDead" /> @Html.DisplayNameFor(model => model.isDead)
                    </label>
                </div>

                <div  class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</body>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
